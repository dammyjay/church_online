<!-- views/public/allVideos.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    
    <link rel="stylesheet" href="/css/style.css">
    <link rel="icon" type="image/x-icon" href="/logo.png">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>All Videos</title>
</head>
<body>

  <section class="section">
    <h2>All Videos</h2>
    <div class="card-grid">
        <% videos.forEach(video => { %>
          <div class="card">
           
            <h3><%= video.title %></h3>
            <!-- <small>Embed URL: <%= video.embed_url %></small> -->
    
            <% 
            let embedUrl = "";
          
            if (video.youtube_url) {
              if (video.youtube_url.includes("watch?v=")) {
                embedUrl = video.youtube_url.replace("watch?v=", "embed/");
              } else if (video.youtube_url.includes("/shorts/")) {
                const id = video.youtube_url.split("/shorts/")[1].split("?")[0];
                embedUrl = `https://www.youtube.com/embed/${id}`;
              } else if (video.youtube_url.includes("youtu.be/")) {
                const id = video.youtube_url.split("youtu.be/")[1].split("?")[0];
                embedUrl = `https://www.youtube.com/embed/${id}`;
              } else {
                embedUrl = video.youtube_url; // fallback
              }
            }
          %>
          
          <% if (embedUrl) { %>
            <iframe 
              width="100%" 
              height="300" 
              src="<%= embedUrl %>" 
              frameborder="0" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
              allowfullscreen>
            </iframe>
          <% } else { %>
            <p>Invalid or missing video URL</p>
          <% } %>
          

            <p><%= video.description %></p>
            <!-- <small><%= new Date(video.created_at2).toLocaleDateString() %></small> -->
            <small><%= new Date(video.created_at3).toLocaleString() %></small>
          </div>
          
        <% }) %>
      </div>
  </section>


</body>
</html>
