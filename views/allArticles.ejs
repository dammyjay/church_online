<!-- views/public/allArticles.ejs -->
<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <link rel="stylesheet" href="/css/style.css" />
    <link rel="icon" type="image/x-icon" href="/logo.png" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>All Articles</title>
  </head>
  <body>
    <header class="header">
      <div class="logo-title">
       <a href="/"> <img src="/logo.png" alt="Logo" /></a>

        <p>C&S Church Online</p>
      </div>

      <nav>
        <a href="/">Home</a>
        <a href="/articles">Articles</a>
        <a href="/videos">Videos</a>
        <a href="#mission-vision">About</a>
        <!-- Assuming About refers to Mission & Vision -->
        <a href="/admin/logout" class="logout-button">Logout</a>
        <!-- Login remains a page link -->
        
      </nav>
    </header>
    <form class="search-form" method="GET" action="/articles">
      <input
        type="text"
        name="search"
        placeholder="Search by title..."
        value="<%= search || '' %>"
        style="padding: 8px; width: 60%; max-width: 400px"
      />
      <button type="submit" style="padding: 8px">Search</button>
    </form>
    <section class="section">
      <h2>All Articles</h2>
      <% articles.forEach(article => { %>
      <div class="article-card-page">
        <div class="article-content">
          <% if (article.image_url) { %>
          <img
            src="<%= article.image_url %>"
            alt="Article Image"
            width="100%"
            height=""
            style="
              max-width: 100%;
              height: auto;
              object-fit: cover;
              border-radius: 8px;
            "
          />
          <% } %>
        </div>
        <div class="article-content">
          <div class="article-text">
            <h3><%= article.title %></h3>

            <p style="word-wrap: break-word"><%= article.content %></p>
            <small
              >Posted on <%= new Date(article.created_at3).toLocaleString()
              %></small
            >
          </div>
        </div>
      </div>
      <% }) %>
    </section>
  </body>
</html>
