<!DOCTYPE html>
<html>
<head>
  <title>Manage Articles</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <h2>Create New Article</h2>
  <form method="POST" action="/admin/articles" enctype="multipart/form-data">
    <label>Title:</label><br>
    <input type="text" name="title" required><br><br>

    <label>Content:</label><br>
    <textarea name="content" required></textarea><br><br>

    <label>Image (optional):</label><br>
    <input type="file" name="image"><br><br>

    <button type="submit">Save Article</button>
  </form>

  <h2>Existing Articles</h2>
  <% articles.forEach(article => { %>
    <div class="article-card">
      <h3><%= article.title %></h3>
      <% if (article.image_url) { %>
        <img src="<%= article.image_url %>" alt="Article Image">
      <% } %>
      <p><%= article.content %></p>
      <small>Posted on <%= new Date(article.created_at).toLocaleString() %></small>
  
      <div class="article-buttons">
        <a href="/admin/articles/edit/<%= article.id %>">Edit</a>
        <form action="/admin/articles/delete/<%= article.id %>" method="POST" onsubmit="return confirm('Are you sure you want to delete this article?');">
          <button type="submit">Delete</button>
        </form>
      </div>
    </div>
  <% }) %>
  

  <a href="/admin/dashboard">Back to Dashboard</a>
</body>
</html>
