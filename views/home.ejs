<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= info?.name || 'Ministry Home' %></title>
  <link rel="stylesheet" href="/css/style.css">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>
  <!-- Header -->
  <header class="header">
    <div class="logo-title">
      <% if (info?.logo_url) { %>
        <img src="<%= info.logo_url %>" alt="Logo">
      <% } %>
      <h1><%= info?.name || 'Our Ministry' %></h1>
    </div>
    <nav>
      <a href="/">Home</a>
      <a href="/admin/articles">Articles</a>
      <a href="/admin/videos">Videos</a>
      <a href="/admin/ministry">About</a>
    </nav>
  </header>

  <!-- Mission & Vision -->
  <section class="section mission-vision">
    <h2>Our Mission</h2>
    <p><%= info?.mission || 'Our mission goes here...' %></p>

    <h2>Our Vision</h2>
    <p><%= info?.vision || 'Our vision goes here...' %></p>
  </section>

  <!-- Articles -->
  <section class="section">
    <h2>Latest Articles</h2>
    <div class="card-grid">
      <% articles.forEach(article => { %>
        <div class="card">
          <h3><%= article.title %></h3>
          <% if (article.image_url) { %>
            <img src="<%= article.image_url %>" alt="Article Image">
          <% } %>
          <p><%= article.content.substring(0, 100) %>...</p>
          <small><%= new Date(article.created_at).toLocaleDateString() %></small>
        </div>
      <% }) %>
    </div>
  </section>

  <!-- Videos -->
 <section class="section">
  <h2>Recent Videos</h2>
  <div class="card-grid">
    <% videos.forEach(video => { %>
      <div class="card">
        <h3><%= video.title %></h3>
        <small>Embed URL: <%= video.embed_url %></small>

        <% if (video.embed_url) { %>
          <iframe 
            width="100%" 
            height="200" 
            src="<%= video.embed_url %>" 
            frameborder="0" 
            allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" 
            allowfullscreen>
          </iframe>
        <% } else { %>
          <p>Invalid or missing video URL</p>
        <% } %>
        <p><%= video.description %></p>
      </div>
    <% }) %>
    
  </div>
</section>

</body>
</html>
